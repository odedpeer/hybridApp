<?xml version='1.0' encoding='utf-8'?>
<widget id="com.traffitruck.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TraffiTruck</name>
	<icon src="ic_launcher.png"/>
    <description>
        TraffiTruck app
    </description>
    <author email="peer.oded@gmail.com" href="http://parsa.co.il">
        TraffiTruck Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
